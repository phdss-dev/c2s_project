<div class="min-vh-100 bg-light py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-10">
        <div class="text-center mb-5">
          <h1 class="h4 fw-bold text-dark">Clientes Cadastrados</h1>
          <p class="text-muted small">Lista de clientes extra√≠dos dos e-mails processados.</p>
        </div>
        <%= render "/shared/flash" %>
        <div class="card border-0 shadow-sm">
          <div class="card-body p-0">
            <div class="table-responsive">
              <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                  <tr>
                    <th>Nome</th>
                    <th>E-mail</th>
                    <th>Telefone</th>
                    <th>Produto de interesse</th>
                    <th>Assunto do email enviado</th>
                    <th class="text-end">Criado em</th>
                  </tr>
                </thead>
                <tbody>
                  <% if @customers.any? %>
                    <% @customers.each do |customer| %>
                      <tr class="align-middle">
                        <td class="fw-semibold text-truncate"><%= display_field(customer.name) %></td>
                        <td><span class="text-muted small"><%= display_field(customer.email) %></span></td>
                        <td><%= display_field(customer.phone) %></td>
                        <td class="fw-medium text-primary"><%= display_field(customer.product_code) %></td>
                        <td><%= display_field(customer.email_subject) %></td>
                        <td class="text-end text-muted small">
                          <%= l(customer.created_at, format: :short) %>
                        </td>
                      </tr>
                    <% end %>
                  <% else %>
                    <tr>
                      <td colspan="6" class="text-center py-5 text-muted">
                        <i class="bi bi-inbox display-6 d-block mb-3"></i>
                        Nenhum cliente cadastrado ainda.
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
          <div class="card-footer bg-transparent border-top d-flex justify-content-between align-items-center py-3">
            <small class="text-muted">
              Total: <strong><%= @customers.count %></strong> cliente(s)
            </small>
            <%= link_to "Voltar ao Upload", root_path, class: "btn btn-outline-secondary btn-sm" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>